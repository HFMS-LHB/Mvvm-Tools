@model MvvmTools.Web.Models.TemplateIndexViewModel

@{
    ViewBag.Title = "All Templates";
}

<div class="pageheader">
    <h1>@ViewBag.Title</h1>
    <p>This is the full list of MVVM templates shared by the community of MVVM Tools users.  To share yours, go to @Html.ActionLink("My Templates", "MyIndex").</p>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li>
                <a href="">Templates</a>
            </li>
            <li class="active">All Templates</li>
        </ol>
    </div>
</div>
<section id="main-content">
    @*<p>@Html.ActionLink("Create New", "Create", null, new {@class = "btn btn-primary"})</p>*@
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body ng-binding">
                    @using (Html.BeginForm("Index", "MvvmTemplates", FormMethod.Post, new { @class = "form-inline" }))
                    {
                        <fieldset>
                            <ul class="ul-no-list-style">
                                <li class='panel'>
                                    @Html.Label("selectedAuthor", "Author:")
                                    @Html.DropDownList("author", @Model.Authors)
                                </li>
                                <li class='panel'>
                                    @Html.Label("selectedLanguage", "Language:")
                                    @Html.DropDownList("language", @Model.Languages)
                                </li>
                                <li class='panel'>
                                    @Html.Label("selectedCategory", "Category:")
                                    @Html.DropDownList("category", @Model.Categories)
                                </li>
                                <li class='panel'>
                                    @Html.TextBox("search", @Model.Search, new {placeholder = "Search...", type = "text", @class = "search", css = "width=50px"})
                                </li>
                                <li class='panel'>
                                    <input type="submit" class="btn btn-default btn-sm" value="Apply">
                                </li>
                            </ul>

                            @*<input type="text" class="search" placeholder="Search..."
                                   id="search">*@
                            
                        </fieldset>
                    }
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Templates.First().Author)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Templates.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Templates.First().Language)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Templates.First().Category)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.Templates)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Language)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category)
                                </td>
                                <td>
                                    @if (Model.Author == item.Author)
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-xs", style = "margin-right:5px;" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-xs" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-xs" })
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
